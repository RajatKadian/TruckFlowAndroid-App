<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.SignUpChoice">

    <!-- Title -->

    <!-- Radio Buttons -->

    <!-- Register Button -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Please Select"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="151dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:layout_editor_absoluteY="253dp">

        <!-- Shipper Radio Button -->
        <RadioButton
            android:id="@+id/radioButtonShipper"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Shipper" />

        <!-- Trucker Radio Button -->
        <RadioButton
            android:id="@+id/radioButtonTrucker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Trucker" />

    </RadioGroup>


    <Button
        android:id="@+id/buttonRegisterChoice"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:text="Register"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="470dp" />

    <TextView
        android:id="@+id/warningText"
        android:layout_width="318dp"
        android:layout_height="26dp"
        android:text=""
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="389dp" />

</androidx.constraintlayout.widget.ConstraintLayout>