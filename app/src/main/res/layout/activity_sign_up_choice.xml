<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registration.SignUpChoice">

    <!-- Title -->

    <!-- Radio Buttons -->

    <!-- Register Button -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="161dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Please Select"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <!-- Shipper Radio Button -->
        <RadioButton
            android:id="@+id/radioButtonShipper"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Shipper" />

        <!-- Trucker Radio Button -->
        <RadioButton
            android:id="@+id/radioButtonTrucker"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Trucker" />

    </RadioGroup>



    <Button
        android:id="@+id/buttonRegisterChoice"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="76dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/warningText"
        android:layout_width="318dp"
        android:layout_height="26dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/buttonRegisterChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>